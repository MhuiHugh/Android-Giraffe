<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--ImageView 图片宽高占View的一半居中-->
    <declare-styleable name="HalfImageButton">
        <attr name="ImgViewSrc" format="reference" />
    </declare-styleable>

    <!--圆菜单 参数作用:圆圈背景,点击时外环宽度,字内容,字颜色,字大小-->
    <declare-styleable name="CircleButton">
        <attr name="cb_color" format="color" />
        <attr name="cb_pressedRingWidth" format="dimension" />
        <attr name="cb_text" format="string" />
        <attr name="cb_text_color" format="color" />
        <attr name="cb_text_size" format="dimension" />
    </declare-styleable>

    <!--圆菜单组 参数:在屏幕右边默认false,按钮组距离底部距离,item间距-->
    <declare-styleable name="CircleSixLayout">
        <attr name="cs_right" format="boolean" />
        <attr name="cs_padding_bottom" format="dimension" />
        <attr name="cs_item_margin" format="dimension" />
        <attr name="cs_item_width" format="dimension" />
    </declare-styleable>

    <!--TextView 字体大小根据View宽高自适应 最小字体，计算精度，是否开启自适应-->
    <declare-styleable name="AutofitTextView">
        <!-- Minimum size of the text. -->
        <attr name="minTextSize" format="dimension" />
        <!-- Amount of precision used to calculate the correct text size to fit within its
        bounds. Lower precision is more precise and takes more time. -->
        <attr name="precision" format="float" />
        <!-- Defines whether to automatically resize text to fit to the view's bounds. -->
        <attr name="sizeToFit" format="boolean" />
    </declare-styleable>
</resources>